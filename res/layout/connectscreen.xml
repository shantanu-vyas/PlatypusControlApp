<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/enterscreen"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:text="Connect to a boat"
        android:textSize="@dimen/open" />

    <TextView
        android:id="@+id/ipaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="IP Address" />

    <EditText
        android:id="@+id/ipAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="XXX.XXX.X.X:11411"
        android:inputType="number|text" />

    
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/phoneId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone ID number" />

    <EditText
        android:id="@+id/phoneIDNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="XX"
        android:inputType="number" />


    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color" />

    <EditText
        android:id="@+id/colorBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/simvsactual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <RadioButton
            android:id="@+id/actualBoatRadio"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:checked="true"
            android:text="ActualBoat" />
          <RadioButton
            android:id="@+id/simulationRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Simulation" />
    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Connect" />

</LinearLayout>